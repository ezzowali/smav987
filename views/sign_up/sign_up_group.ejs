<body>

  <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
  <script>
    AOS.init();
  </script>

<img class="d-block w-100 img-sty mobile_slide"  src="images/signup/header.JPG" alt="Second slide">


  <section id="registerForm">

    <div class="container ">

      <div class="card-body content" style="color: white;">

        <h1 style="text-align: center;"> <img src="images/SMAV_MATCH/logo_match.png" height="90x" width="80"></h1>

        <% if (message) { %>
          <div class="alert alert-danger alert-dismissible fade show">
            <strong>!!خطأ</strong> الايميل مستخدم



            <button type="button" class="close" data-dismiss="alert">&times;</button>


          </div>
          <% } %>


            <% if (message2) { %>
              <div class="alert alert-success alert-dismissible fade show">
                <a href="/"> للعودة من هنا </a>تم تسجيلك

                <button type="button" class="close" data-dismiss="alert">&times;</button>
              </div>
              <% } %>




                <form action="/sign_up_group" method="POST" enctype="multipart/form-data">

                  <div class="row">

                    <div class="col-md-2 mb-3">


                    </div>

                    <div class="col-md-8 mb-3">

                      <p style="color: black; text-align: right;">
                        برنامج مخصص للمتطوعين الصحيين الذين لديهم شغف للعمل التطوعي وخدمة المجتمع يركز البرنامج على تأسيس المعارف والوعي وبعض المهارات الأساسية للمتطوع في البرامج الصحية والخدمات الموجهة للفئات الضعيفة في المجتمع و يركز على بناء جدارات المتطوع و توجيه وعيه ومواهبه لرسم مساره التطوعي وتصميم فرصته التطوعية


                      </p>

                      <div class="frontside">
                        <div class="card ">
                          <div class="card-body text-center" style="background-color: #9a87bd;">
                            <h4 class="card-title fas fa-user-circle" style="color: white; font-weight: bolder;"> <i
                                class=" "></i> المعلومات الشخصية </h4>


                            <div class="row">

                              <div class="col-md-2 mb-3">
                                <select name="company" class="select effect-16 inputs" required>
                                  <option value=""> الجهة </option>
                                  <option value="umm-alqura_uni"> جامعة ام القرى </option>
                                  <option value="taif_uni ">جامعة الطائف </option>
                                  <option value="jazan_uni"> جامعة جازان </option>
                                  <option value="taibah_uni"> جامعة طيبة </option>
                                  <option value="jed_uni"> جامعة جدة </option>
                                  <option value="ehsan_com">جمعية احسان الطبية بجازان </option>
                                  <option value="rakha_com"> جمعية لمسة رخاء </option>
                                  <option value="darham_com"> جمعية درهم وقاية </option>
                                  <option value="zam_com"> جمعية زمزم </option>

                                </select>
                                <span class="focus-border"></span>
                              </div>


                            </div>


                            <div class="row">
                              <div class="col-md-4 mb-3">
                                <input type="text" class="effect-16" id="firstName_En" name="firstName_En"
                                  placeholder="الاسم الاول " value="" required>
                                <span class="focus-border"></span>
                              </div>
                            </div>


                            <div class="row">
                              <div class="col-md-4 mb-3" style="color: black;">
                                <input type="text" class="effect-16" id="middleName_En" name="middleName_En"
                                  placeholder="اسم الاب " value="" required>
                                <span class="focus-border"></span>

                              </div>
                            </div>


                            <div class="row">
                              <div class="col-md-4 mb-3" style="color: black;">
                                <input type="text" class="effect-16" id="lastName_En" name="lastName_En"
                                  placeholder="اللقب " value="" required>
                                <span class="focus-border"></span>
                              </div>
                            </div>

                            <div class="row">

                              <div class="col-md-4 mb-3">

                                <input type="number" class="effect-16 inputs" name="identity_id" min="1000000000"
                                  placeholder="رقم الهوية" value="" required>
                                <span class="focus-border"></span>
                              </div>
                            </div>


                            <div class="row">

                              <div class="col-md-4 mb-3" style="color: black;">

                                <input type="number" class="effect-16 inputs" min="500000000" name="phone" value=""
                                  placeholder=" رقم الجوال " required>
                                <span class="focus-border"></span>
                              </div>
                            </div>


                            <div class="row">

                              <div class="col-md-4 mb-3" style="color: black;">

                                <input type="email" class="effect-16 inputs" name="email" value=""
                                  placeholder="البريد الالكتروني   " required>
                                <span class="focus-border"></span>
                              </div>
                            </div>



                            <div class="row">

                              <div class="col-md-4 mb-3" style="color: black;">
                                <select name="gender" class="select effect-16 inputs" required>
                                  <option value="">-- الجنس --</option>
                                  <option value="male">male</option>
                                  <option value="female">female</option>

                                </select>
                                <span class="focus-border"></span>
                              </div>
                            </div>



                            <div class="row">

                              <div class="col-md-4 mb-3" style="color: black;">


                                <input type="number" class="effect-16 inputs" id="age" name="age" placeholder="العمر "
                                  min="14" max="100" required>
                                <span class="focus-border"></span>
                              </div>
                            </div>


                            <div class="row">


                              <div class="col-md-6 mb-3" style="color: black;">
                                <select name="city" class="select effect-16 inputs"
                                  onchange="CheckingOther_city(this.value);" required>
                                  <option value="">-- المدينة --</option>
                                  <option value="Riyadh">Riyadh</option>
                                  <option value="Makkah">Makkah</option>

                                  <option value="jeddah">jeddah</option>
                                  <option value="Dammam">Dammam</option>


                                  <option value="Abha">Abha</option>
                                  <option value="Taif"> Taif</option>


                                  <option value="Qassim">Qassim</option>
                                  <option value="Jazan">Jazan</option>


                                  <option value="Medinah">Medinah</option>
                                  <option value="Eastern">Eastern</option>



                                  <option value="Najran">Najran</option>
                                  <option value="Al-Baha">Al-Baha</option>


                                  <option value="Tabouk">Tabouk</option>
                                  <option value="Aseer">Aseer</option>


                                  <option value="other">other</option>


                                </select>

                                <input type="text" id="other_id_city" name="city" style='display:none;' />
                                <span class="focus-border"></span>
                              </div>
                            </div>

                            <h4 class="card-title fas fa-university" style="color: white;"> المعلومات الأكاديمية </h4>


                        

                            <div class="row">

                              <div class="col-md-3 mb-3">
                                <select name="EducationLevel" class="select effect-16 inputs"
                                  onchange='CheckingOther_eduLev(this.value);' required>
                                  <option value="">-- المرحلة التعليمية --</option>
                                  <option value="1st year student"> 1st year student </option>
                                  <option value="2nd year student">2nd year student </option>
                                  <option value="3rd year student"> 3rd year student </option>
                                  <option value="4th year student "> 4th year student </option>

                                  <option value="5th year student">5th year student </option>
                                  <option value="6th year student"> 6th year student </option>
                                  <option value="fresh graduate"> fresh graduate </option>

                                  <option value="Intern">Intern </option>
                                  <option value="R1"> R1 </option>
                                  <option value="R2">R2 </option>


                                  <option value="R3">R3 </option>
                                  <option value="R4"> R4 </option>
                                  <option value="Specialist ">Specialist </option>

                                  <option value="consultant ">consultant </option>
                                  <option value="other"> other </option>

                                  <input type="text" id="other_id_EducationLevel" name="EducationLevel"
                                    style='display:none;' />



                                </select>
                                <span class="focus-border"></span>
                              </div>
                            </div>


                            <div class="row">

                              <div class="col-md-4 mb-3">

                                <input type="text" class="effect-16" name="university"
                                  placeholder="مكان العمل " value="" required>
                                <span class="focus-border"></span>
                              </div>
                            </div>

                            <div class="row">

                              <div class="col-md-3 mb-3">
                                <select name="Specialty" class="select effect-16 inputs" required
                                  onchange='CheckingOther_spe(this.value);'>
                                  <option value="">-- التخصص --</option>
                                  <option value="medicine "> medicine </option>
                                  <option value="dentistry ">dentistry </option>
                                  <option value="pharmacy"> pharmacy </option>
                                  <option value="nursing "> nursing </option>
                                  <option value="public health"> public health </option>
                                  <option value="Applied Medical Sciences">Applied Medical Sciences </option>
                                  <option value="other"> other </option>
                                </select>

                                <input type="text" id="other_id_Specialty" name="Specialty" style='display:none;' />

                                <span class="focus-border"></span>
                              </div>

                            </div>

                            <div class="row">

                              <div class="col-md-5 mb-3">
                                <input type="text" class="effect-16" name="SCFHS" value=""
                                  placeholder="رقم هيئة التخصصات الصحية (اختياري) ">
                                <span class="focus-border"></span>
                              </div>
                            </div>

                            <div class="row">

                              <div class="col-md-2 mb-3">
                                <select name="times" class="select effect-16 inputs" required>
                                  <option value=""> كم عدد مرات التطوع </option>
                                  <option value="1 "> 1 </option>
                                  <option value="2 ">2 </option>
                                  <option value="3"> 3 </option>
                                  <option value="4 "> 4 </option>
                                  <option value="5"> 5 </option>
                                  <option value="6">6 </option>
                                  <option value="7"> 7 </option>

                                  <option value="8 "> 8 </option>
                                  <option value="9"> 9 </option>
                                  <option value="10">10 </option>
                                  <option value="10>"> 10> </option>
                                </select>
                                <span class="focus-border"></span>
                              </div>


                            </div>


                            <div class="row">
                              <div class="col-md-4 mb-3" style="color: black;">
                                <input type="text" class="effect-16"  name="skills"
                                  placeholder="الهوايات " value="" >
                                <span class="focus-border"></span>
                              </div>
                            </div>

                            <div class="row">

                              <div class="col-md-4 mb-3" style="color:black">
                                <input type="text" class="effect-16" name="url_video"
                                  placeholder="اضف رابط الفيديو هنا " >


                                <small>
                                  الرجاء اتباع التعليمات التي في هذا الملف
                                  <br>

                                  <a href="TestFile/شروط الفيديو.docx" style=" color:#cccccc;" download> Click to
                                    Download </a>


                                </small>

                                <span class="focus-border"></span>
                              </div>
                            </div>



                            <div class="row">

                              <div class="col-md-12">

                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button type="submit" class="btn btn-info">تسجيل</button>
                              </div>
                            </div>


                          </div>



                        </div>


                      </div>

                    </div>

                  </div>







                </form>
      </div>
    </div>
  </section>



</body>


<%- include('../includes/footer') %>


  <script type="text/javascript">
    function CheckingOther_city(val) {
      var element_city = document.getElementById('other_id_city');
      var element_eduLev = document.getElementById('other_id_EducationLevel');






      if (val == 'other')
        element_city.style.display = 'block';
      else
        element_city.style.display = 'none';


    }


    function CheckingOther_eduLev(val) {


      var element_eduLev = document.getElementById('other_id_EducationLevel');



      if (val == 'other')
        element_eduLev.style.display = 'block';
      else
        element_eduLev.style.display = 'none';


    }



    function CheckingOther_spe(val) {

      var element_spe = document.getElementById('other_id_Specialty');



      if (val == 'other')
        element_spe.style.display = 'block';
      else
        element_spe.style.display = 'none';


    }

  </script>